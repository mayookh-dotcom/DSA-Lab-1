#include <stdio.h>
#include <string.h>

struct student {
    char name[50];
    int age;
    int marks;
};

int main() {
    struct student s1, s2;
    float average; 

    printf("Enter details of student 1:\n");
    printf("Name: ");
    scanf("%s", s1.name);
    printf("Age: ");
    scanf("%d", &s1.age);  
    printf("Marks: ");
    scanf("%d", &s1.marks); 

    printf("\nEnter details of student 2:\n");
    printf("Name: ");
    scanf("%s", s2.name);
    printf("Age: ");
    scanf("%d", &s2.age);  
    printf("Marks: ");
    scanf("%d", &s2.marks); 

    printf("\n--- Student Information ---\n");
    
    printf("Student 1: %s, Age: %d, Marks: %d\n", s1.name, s1.age, s1.marks);
    printf("Student 2: %s, Age: %d, Marks: %d\n", s2.name, s2.age, s2.marks);

    average = (s1.marks + s2.marks) / 2.0; 
    printf("\nAverage marks: %.2f\n", average); 

    return 0;
}
