#include <stdio.h>

int main() {
    int  n, m, j, i;
    int arr[5]={5,3,6,4,2};
    printf("existing array elements are: \n");
    for(i = 0; i < 5; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n--------------------------\n");
    printf("Enter position of element to change (0 to 4): ");
    scanf("%d", &n);
    printf("Enter new value: ");
    scanf("%d", &m);

    for(i = 0; i < 5; i++) {
        if(i == n) {
            arr[i] = m;
        }
    }

    printf("\n--------------------------\n");
    printf("Updated array elements are: ");
    for(i = 0; i < 5; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
