#include <stdio.h>

struct sparse
{
    int row,col,val;
};

int main(){
    struct sparse A[10],T[10];
    int r,c,n;
    printf("Enter number of rows: ");
    scanf("%d", &r);

    printf("Enter number of columns: ");
    scanf("%d", &c);

    printf("Enter number of non-zero elements: ");
    scanf("%d", &n);
    
    //Sparse matrix
    A[0].row = r;
    A[0].col = c;
    A[0].val = n;

    printf("Enter the non-zero elements (row, column, value):\n");
    for(int i=1; i<=n; i++){
        scanf("%d %d %d", &A[i].row, &A[i].col, &A[i].val);
    }

    printf("\nOriginal Sparse Matrix (3-tuple form):\n");
    printf("Row Col Val\n");
    for(int i = 0; i <= n; i++){
        printf("%d   %d   %d\n", A[i].row, A[i].col, A[i].val);
    }
    //transpose 
    T[0].row = A[0].col;
    T[0].col = A[0].row;
    T[0].val = A[0].val;
    for(int i=1; i<=n; i++){
        T[i].row=A[i].col;
        T[i].col=A[i].row;
        T[i].val=A[i].val;
    }
    printf("Transpose in 3-tuple form:\n");
    for(int i=0; i<=n; i++){
        printf("%d %d %d\n", T[i].row, T[i].col, T[i].val);
    }
    return 0;
}
