#include <stdio.h>

int main() {
    int n, i;
    int arr[5] = {5, 3, 6, 4, 2};
    int size = 5;

    printf("Existing array elements are:\n");
    for(i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    printf("\n--------------------------\n");
    printf("Enter position of element to delete: ");
    scanf("%d", &n);

    
    for(i = n; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }

    size--; 

    printf("\n--------------------------\n");
    printf("Updated array elements are: ");
    for(i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
