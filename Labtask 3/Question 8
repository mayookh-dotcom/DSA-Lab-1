#include <stdio.h>

int main() {
    int arr1[50], arr2[50], arr3[100];
    int n1, n2, i, j;

    printf("\n--------Array 1--------\n");
    printf("Enter number of elements in array: ");
    scanf("%d", &n1);

    printf("Enter elements of array:\n");
    for(i = 0; i < n1; i++) {
        scanf("%d", &arr1[i]);
    }

    for(i = 0; i < n1; i++) {
        arr3[i] = arr1[i];
    }

    printf("\n--------Array 2--------\n");
    printf("Enter number of elements in array: ");
    scanf("%d", &n2);

    printf("Enter elements of array:\n");
    for(i = 0; i < n2; i++) {
        scanf("%d", &arr2[i]);
    }

    for(j = 0; j < n2; j++) {
        arr3[n1 + j] = arr2[j];
    }

    printf("\n-------------------\n");
    printf("\nMerged array is:\n");
    for(i = 0; i < n1 + n2; i++) {
        printf("%d ", arr3[i]);
    }

    return 0;
}
